<div class="box-header-equipamento">
  <h2>
  Gerência de equipamentos
  </h2>
  <a href="/equipamentoroutes/exibirinclusaoroute"><button class="btn btn-success">Incluir equipamento</button></a>
</div>
{{#each equipamentos}}
<div class="card mt-4">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>Descrição: {{descricao}}</small>
    <br>
    <small>Código: {{codigo}}</small>
    <br>
    <small>Numero de série: {{numeroserie}}</small>
    <br>
    <img src="{{imagem}}"></img>
    <br>
    <a href="/equipamentoroutes/alteracaoroute/{{id}}"><button class="btn btn-success mt-4">Alterar
        equipamento</button></a>
    <form action="/equipamentoroutes/excluirroute" method="POST">
      <input type="hidden" name="id" value="{{id}}">
      <button type="submit" class="btn btn-danger mt-2">Excluir equipamento</button>
    </form>
  </div>
</div>
{{else}}
<h4 class="mt-3">Nenhum equipamento cadastrado!</h4>
{{/each}}