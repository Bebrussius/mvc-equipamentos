{{#each equipamentos}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <br>
      <a href="/equipamentoroutes/alteracaoroute/{{id}}"><button class="btn btn-success mt-4">Alterar equipamento</button></a>
