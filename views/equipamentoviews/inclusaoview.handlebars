
<div class="box-header-equipamento">
  <div class="card-body">
      <h3>Inclusão de equipamento</h3>
    <form action="/equipamentoroutes/incluirroute" method="POST">
      <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" placeholder="Nome do equipamento" class="form-control">
        <br>
      <label for="nome">Descrição:</label>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição do equipamento" class="form-control">
        <br>
      <label for="nome">Código:</label>
        <input type="text" id="codigo" name="codigo" placeholder="Código do equipamento" class="form-control">
        <br>
      <label for="nome">Número de série:</label>
        <input type="text" id="numeroserie" name="numeroserie" placeholder="Numero de série do equipamento" class="form-control">
        <br>
      <label for="nome" id="label-file">Imagem:</label>
        <input type="file" id="imagem" name="imagem" placeholder="Imagem do equipamento" class="form-control">
        <br>
      <button type="submit" class="btn btn-success">Incluir equipamento</button>
    </form>
  </div>
</div>
{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{/each}}