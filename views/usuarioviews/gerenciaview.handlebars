<div class="box-header-equipamento">
<h2>
  Gerência de usuários
</h2>
<a href="/usuarioroutes/exibirinclusaoroute"><button class="btn btn-success">Incluir usuário</button></a>
</div>

{{#each usuarios}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>E-mail: {{email}}</small>
      <br>
      <small>Senha: {{senha}}</small>
      <br>
      <small>Telefone: {{telefone}}</small>
      <br>
      <a href="/usuarioroutes/alteracaoroute/{{id}}"><button class="btn btn-success mt-4">Alterar usuário</button></a>
      <form action="/usuarioroutes/excluirroute" method="POST">
        <input type="hidden" name="id" value="{{id}}">
        <button type="submit" class="btn btn-danger mt-2">Excluir usuário</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhum usuário cadastrado!</h4>
{{/each}}